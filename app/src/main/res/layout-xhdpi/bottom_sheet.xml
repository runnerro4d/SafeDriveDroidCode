<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    style="?attr/bottomSheetStyle">


    <TextView
        android:id="@+id/routeDetailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="Route Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/routeNumberId"
        android:layout_width="165dp"
        android:layout_height="37dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="Route Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"

        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeDetailId" />


    <TextView
        android:id="@+id/RestStopID"
        android:layout_width="161dp"
        android:layout_height="37dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="164dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"

        android:padding="5dp"
        android:text="RestStop Facilities"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeDetailId" />

    <TextView
        android:id="@+id/RouteRisk"
        android:layout_width="165dp"
        android:layout_height="31dp"
        android:layout_marginStart="176dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="Risk"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeDetailId" />

    <TextView
        android:id="@+id/routeRisk"
        android:layout_width="102dp"
        android:layout_height="31dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="224dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="Toilet"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/routeRisk3"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="Water"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/routeRisk2"
        android:layout_width="215dp"
        android:layout_height="31dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="WheelChair Access"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/routeRisk4"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="132dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="FastFood"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/routeRisk5"
        android:layout_width="119dp"
        android:layout_height="33dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="Picnic Tables"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/RouteDuration"
        android:layout_width="165dp"
        android:layout_height="31dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="Duration"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/RouteDistance"
        android:layout_width="198dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text="Distance"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/RouteRisk"
        tools:layout_editor_absoluteX="176dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getreststopibuttonid"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_stuff"
        android:text="Rest Stops"

        android:textColor="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RouteDistance" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigateId"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_stuff"
        android:text="Navigate"
        android:textColor="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toEndOf="@+id/getreststopibuttonid"
        app:layout_constraintTop_toBottomOf="@+id/RouteDistance" />

</androidx.constraintlayout.widget.ConstraintLayout>
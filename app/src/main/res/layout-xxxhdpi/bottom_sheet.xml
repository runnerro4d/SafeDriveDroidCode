<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    style="?attr/bottomSheetStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <TextView
        android:id="@+id/routeDetailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="Route Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/routeNumberId"
        android:layout_width="165dp"
        android:layout_height="37dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="Route Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"

        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeDetailId" />

    <TextView
        android:id="@+id/RestStopID"
        android:layout_width="161dp"
        android:layout_height="37dp"
        android:layout_marginEnd="54dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"

        android:text="RestStop Facilities"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeDetailId" />

    <TextView
        android:id="@+id/RouteRisk"
        android:layout_width="165dp"
        android:layout_height="31dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="Risk"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />


    <TextView
        android:id="@+id/toilet"
        android:layout_width="105dp"
        android:layout_height="31dp"
        android:layout_marginEnd="110dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="Toilet"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/water"
        android:layout_width="113dp"
        android:layout_height="31dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="Water"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/wheelchair"
        android:layout_width="215dp"
        android:layout_height="31dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="WheelChair Access"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/RestStopFood"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="121dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="FastFood"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/picnictable"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="Picnic Tables"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeNumberId" />

    <TextView
        android:id="@+id/RouteDuration"
        android:layout_width="165dp"
        android:layout_height="31dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="Duration"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RouteRisk" />

    <TextView
        android:id="@+id/RouteDistance"
        android:layout_width="165dp"
        android:layout_height="33dp"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="5dp"
        android:text="Distance"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RouteDuration" />

    <ImageButton
        android:id="@+id/arrowbuttonid"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/routeDetailId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/arrow_up" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getreststopibuttonid"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_stuff"
        android:text="   Rest Stops  "

        android:textColor="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/navigateId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RouteDistance" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigateId"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_stuff"
        android:text="    Navigate    "
        android:textColor="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/getreststopibuttonid"
        app:layout_constraintTop_toBottomOf="@+id/RouteDistance" />

</androidx.constraintlayout.widget.ConstraintLayout>